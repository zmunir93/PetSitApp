<h1>Login Index Page</h1>
@*<div class="fb-login-button" data-width="" data-size="" data-button-type="" data-layout="" data-auto-logout-link="false" data-use-continue-as="false"></div>*@

@{
    ViewData["Title"] = "Login";
}
<div>
    <h2>@ViewData["Title"]</h2>
    <form action="@Url.Action("Login", "User")" method="post">
        <div>
            <label>Username:</label>
            <input type="text" name="username" required />
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password" required />
        </div>
        <button type="submit">Login</button>
        <input type="checkbox" id="rememberMe" name="rememberMe"/>
        <label for"rememberMe">Remember Me</label>
    </form>

    <br />
    <br />
    <h2> Dont have an account?</h2>
    <form asp-controller="User" asp-action="Register">
        <button>Create Account</button>
    </form>
</div>