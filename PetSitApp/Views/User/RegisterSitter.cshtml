@model User

<div class="progress mt-xxl-5" style="margin-top: 10vh;">
    <div class="progress-bar bg-success" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<form class="form-group mx-auto" method="post">
    <h2 class="text-primary" style="margin: 5vh 0;">Enter a Username and Password to create a Sitter Account</h2>

    <div class="col-md-4">
        <label class="col-sm-2 col-form-label" asp-for="Username"></label>
        <input class="form-control mb-1" type="text" asp-for="Username" required />
    </div>

    <div class="col-md-4">
        <label class="col-sm-2 col-form-label" asp-for="Password"></label>
        <input class="form-control mb-4" asp-for="Password" type="password" required />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Login">Back</a>
</form>