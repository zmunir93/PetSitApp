@model Sitter
@{
    if (Model == null || String.IsNullOrEmpty(Model.FirstName))
    {
        <a asp-controller="Sitter" asp-action="CreateSitter" aspclass="btn btn-secondary" style="width:150px">
            Add Info
        </a>
    } else
    {
        <h1>@(char.ToUpper(Model.FirstName[0]) + Model.FirstName.Substring(1))'s Dashboard</h1>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@Url.Action("GetOwnerImage", "Sitter")" alt="Your profile picture" />
            <div class="card-body">
                <h5 class="card-title" width="50%">@Model.FirstName @Model.LastName</h5>
                <p class="card-text" width="50%">@Model.Age years old</p>
                <p class="card-text" width="50%">@Model.City, @Model.State</p>
                <a asp-controller="Sitter" asp-action="EditSitter" asp-route-id="@Model.Id" class="btn btn-primary mx-2">Edit Info <i class="bi bi-pencil-square"></i></a>
            </div>
        </div>
