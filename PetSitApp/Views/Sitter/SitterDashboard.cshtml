        //<p class="card-text" width="50%">@Model.Age years old</p>

        //<p class="card-text" width="50%">@Model.City, @Model.State</p>

            //<a asp-controller="Sitter" asp-action="EditSitter" asp-route-id="@Model.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>

           

        <div>
            <a asp-controller="Sitter" asp-action="EditAvailability" class="btn btn-primary">Edit Availability</a>
        </div>
        
    }
}