@model IEnumerable<Owner>
@{
    ViewData["Title"] = "Index";
}



<div class="container p3">
    <h1>Owner Controller page</h1>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Owner" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create User</a>
        </div>
        
    </div>


    <table class="table table-bordere table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th></th>
                <th>
                    Age
                </th>
                <th>
                    Image
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.FirstName
                    </td>
                    <td width="50%">
                        @obj.LastName
                    </td>
                    
                    @*<td width="50%">
                        <img src="@obj.ProfilePicture" width="200" height="200">
                    </td>*@
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Owner" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Owner" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>